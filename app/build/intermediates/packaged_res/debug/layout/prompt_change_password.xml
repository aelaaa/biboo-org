<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/change_password_bg">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="CHANGE PASSWORD:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtChangePassDes"
            android:layout_width="219dp"
            android:layout_height="69dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/roboto"
            android:text="We have sent a unique code to your registered email kai*******@gmail. com. Please input the following code to proceed."
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txtEnterCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto"
            android:text="Enter code:"
            android:textColor="#000000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtxtCode"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Example: 123456"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginStart="35dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnOkayPassChanged"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:fontFamily="@font/roboto"
                android:text="SUBMIT"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:fontFamily="@font/roboto"
                android:text="CANCEL"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>