<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".Gallery">

    <Button
        android:id="@+id/btn_gallery_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/button2"
        android:drawableStart="@drawable/dolphin_for_btnback"
        android:drawablePadding="8dp"
        android:elevation="10dp"
        android:text="Back"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/subhead2"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_gallery_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:letterSpacing=".1"
            android:text="@string/animalia"
            android:textColor="@color/header"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/roboto"
            android:letterSpacing=".1"
            android:text="Sanctuary"
            android:textColor="@color/subhead"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_land_animals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false"
            android:elevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cv_land"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/round_corner"
                    android:src="@drawable/land_pic"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:elevation="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Land Animals"
                    android:textColor="@color/subhead2"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="0.1"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_aerial_animals"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false"
            android:elevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cv_aerial"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/round_corner"
                    android:src="@drawable/aerial_pic"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:elevation="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Aerial Animals"
                    android:textColor="@color/subhead2"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="0.1"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_aquatic_animals"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false"
            android:elevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cv_aquatic"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/round_corner"
                    android:src="@drawable/aquatic_pic"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:elevation="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Aquatic Animals"
                    android:textColor="@color/subhead2"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="0.1"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_prehistoric_animals"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false"
            android:elevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cv_prehistoric"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/round_corner"
                    android:src="@drawable/prehistoric_pic"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:elevation="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Prehistoric Animals"
                    android:textColor="@color/subhead2"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="0.1"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>