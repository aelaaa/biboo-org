<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anima_Descrip">


    <TextView
        android:id="@+id/tvScore"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:clipToOutline="true"
        android:background="@drawable/bg_score_outline"
        android:gravity="center"
        android:text="100"
        app:layout_constraintEnd_toStartOf="@+id/imgSettings"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLevel_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Level 0:0"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSettings"
        android:layout_width="33dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_settings" />

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="33dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_information" />

    <ImageView
        android:id="@+id/imgBulbHint"
        android:layout_width="33dp"
        android:layout_height="34dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_bulb" />


    <TextView
        android:id="@+id/tvAnimaDescripQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:padding="10dp"
        android:text="THIS ANIMAL HAS FOUR LEGS AND HAVE SMALL FEET. WHAT AM I?"
        android:textColor="@color/subhead2"
        android:fontFamily="@font/roboto"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLevel_count" />

    <ImageButton
        android:id="@+id/btn_img_option1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:contentDescription="Image button1"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_weasel"
        app:layout_constraintStart_toStartOf="@+id/tvAnimaDescripQuestion"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimaDescripQuestion"
        tools:ignore="HardcodedText" />


    <ImageButton
        android:id="@+id/btn_img_option2"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:contentDescription="Image button2"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_weasel"
        app:layout_constraintEnd_toEndOf="@+id/tvAnimaDescripQuestion"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimaDescripQuestion"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btn_img_option3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner"
        android:contentDescription="Image button3"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_weasel"
        app:layout_constraintStart_toStartOf="@+id/btn_img_option1"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_option1"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btn_img_option4"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner"
        android:clipToOutline="true"
        android:contentDescription="Image button4"
        android:scaleType="centerCrop"
        android:src="@drawable/img_weasel"
        app:layout_constraintEnd_toEndOf="@+id/btn_img_option2"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_option2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnSubmitAnimaDescrip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_darky_green"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="25dp"

        app:layout_constraintTop_toBottomOf="@+id/btn_img_option3"
        tools:layout_editor_absoluteX="-28dp" />


</androidx.constraintlayout.widget.ConstraintLayout>