<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewscore">
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:elevation="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_btn"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dolphin" />

        <TextView
            android:id="@+id/back_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#000D201F"
            android:fontFamily="@font/roboto_mono"
            android:text="BACK"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/score_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:textSize="60sp"
            android:text="SCORE"
            android:textColor="@color/header"
            android:fontFamily="@font/roboto_mono"
            android:textStyle="bold"
            android:shadowColor="#616363"
            android:shadowDx="9"
            android:shadowDy="9"
            android:shadowRadius="10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:layout_marginLeft="105dp"
            android:textSize="30sp"
            android:text="LEADERBOARDS"
            android:textColor="@color/subhead"
            android:fontFamily="@font/roboto_mono"
            android:textStyle="bold"
            android:shadowColor="#616363"
            android:shadowDx="6"
            android:shadowDy="6"
            android:shadowRadius="10"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/leaderbrds_shape"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="100dp">
    </LinearLayout>

</RelativeLayout>